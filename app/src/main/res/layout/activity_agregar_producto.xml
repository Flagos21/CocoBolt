<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color3"
    tools:context=".AgregarProductoActivity">

    <EditText
        android:id="@+id/inputNombreP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="NOMBRE PRODUCTO"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:id="@+id/inputDescripcionP"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="DESCRIPCION PRODUCTO"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/inputPrecioP"
        app:layout_constraintStart_toStartOf="@+id/inputPrecioP"
        app:layout_constraintTop_toTopOf="@+id/inputPrecioP" />

    <EditText
        android:id="@+id/inputPrecioP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="PRECIO PRODUCTO"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/inputNombreP"
        app:layout_constraintStart_toStartOf="@+id/inputNombreP"
        app:layout_constraintTop_toTopOf="@+id/inputNombreP" />

    <Button
        android:id="@+id/btnAgregarP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="223dp"
        android:backgroundTint="@color/color4"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="AGREGAR"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/agregarImg"
        app:layout_constraintStart_toStartOf="@+id/agregarImg"
        app:layout_constraintTop_toTopOf="@+id/agregarImg" />

    <ImageView
        android:id="@+id/agregarImg"
        android:layout_width="174dp"
        android:layout_height="98dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@+id/inputDescripcionP"
        app:layout_constraintStart_toStartOf="@+id/inputDescripcionP"
        app:layout_constraintTop_toTopOf="@+id/inputDescripcionP"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnAgregarImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/color5"
        android:fontFamily="serif"
        android:text="IMAGEN"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@+id/agregarImg"
        app:layout_constraintStart_toStartOf="@+id/agregarImg"
        app:layout_constraintTop_toTopOf="@+id/agregarImg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:text="AGREGAR PRODUCTOS"
        android:textColor="@color/color5"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>